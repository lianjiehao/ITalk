<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerphonebackground"
    android:orientation="vertical" >

    <include layout="@layout/findpasswordbyidtitle" />

    <com.stdu.edu.italk.rewritewidget.ClearEditText
        android:id="@+id/forgetpasswordid"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:digits="1234567890"
        android:hint="请输入学号"
        android:inputType="number"
        android:paddingLeft="4dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <Button
        android:id="@+id/nexttoforgetemail"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/next_1" />

</LinearLayout>